@model Product

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductID" />
            <div class="form-group">
                <label class="control-label">Product Name</label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Product Description</label>
                <input asp-for="ProdDesc" class="form-control" />
                <span asp-validation-for="ProdDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Select Category</label>
                <select asp-for="CategoryID" class="form-control" asp-items="ViewBag.Category"></select>
                <span asp-validation-for="CategoryID" class="text-danger"></span>
            </div>
            <div>
                <label>Select New Photo</label>
                <div>
                    <input type="hidden" asp-for="photopath" />
                    <input class="form-control" asp-for="Photo" type="file" />
                    <span asp-validation-for="Photo"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

